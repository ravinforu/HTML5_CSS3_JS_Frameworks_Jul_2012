<!DOCTYPE html>
<html>
<head>
	<script src="jquery-1.7.2.js"></script>
	<script>
		function add(){
			//$("p").prepend("<input type='text'>");
			$("p").append("<input type='text'>");
		}
		$().ready(function(){
			$("#click").on("click",add);

			$("#header1").
				css("color","red").
				attr("disabled","disabled");
			
			$("h1").each(function(){
				alert($(this).text());
			});
		});
	</script>
</head>
<body>
	<p>Paragraph</p>
	<input type="button" value="Click" id="click">
	<input type="button" value="Remove" id="remove">
	
